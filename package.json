{
  "name": "extensible-crm-platform",
  "version": "1.0.0",
  "description": "Extensible CRM platform with pluggable domain extensions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc --build",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:crm": "eslint src/extensions/crm --ext .ts",
    "lint:financial": "eslint src/extensions/financial --ext .ts",
    "lint:platform": "eslint src/platform --ext .ts",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "extension:create": "node scripts/create-extension.js",
    "extension:list": "node scripts/list-extensions.js",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "prepare": "husky install",
    "graph:start": "docker-compose -f docker-compose.neo4j.yml up -d",
    "graph:stop": "docker-compose -f docker-compose.neo4j.yml down",
    "graph:demo": "ts-node scripts/demo-knowledge-graph.ts",
    "graph:clean": "docker-compose -f docker-compose.neo4j.yml down -v",
    "graph:logs": "docker-compose -f docker-compose.neo4j.yml logs -f neo4j",
    "demo:spacy-vs-regex": "npx ts-node scripts/demo-spacy-vs-regex.ts",
    "demo:entity-relationships": "npx ts-node scripts/demo-entity-relationships.ts",
    "demo:build-graph": "npx ts-node -r dotenv/config scripts/build-neo4j-graph.ts",
    "demo:hybrid": "npx ts-node -r dotenv/config scripts/demo-hybrid-entity-recognition.ts",
    "ingest:all": "npx ts-node -r dotenv/config scripts/run-full-ingestion.ts",
    "sync:ontology": "ts-node scripts/sync-ontology.ts"
  },
  "keywords": [
    "crm",
    "extensible",
    "platform",
    "domain-driven",
    "microservices",
    "modular"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@langchain/community": "^0.3.47",
    "@langchain/core": "^0.1.5",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@types/handlebars": "^4.0.40",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "inversify": "^7.5.3",
    "joi": "^17.11.0",
    "jsforce": "^2.0.0-beta.29",
    "jsonwebtoken": "^9.0.2",
    "neo4j-driver": "^5.28.1",
    "rdflib": "^2.2.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.11",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.19.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/tmp": "^0.2.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mailparser": "^3.7.3",
    "nock": "^13.4.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
