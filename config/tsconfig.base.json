{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "../",
    "paths": {
      "@src/*": ["src/*"],
      "@platform/*": ["src/platform/*"],
      "@crm/*": ["ontologies/crm/*"],
      "@financial/*": ["ontologies/financial/*"],
      "@procurement/*": ["ontologies/procurement/*"],
      "@shared/*": ["src/shared/*"],
      "@generated/*": ["build/ontologies/*"],
      "@crm/domain/*": ["build/ontologies/crm/legacy/domain/*"],
      "@crm/infrastructure/repositories/*": ["build/ontologies/crm/legacy/infrastructure/repositories/*"],
      "@financial/domain/*": ["build/ontologies/financial/legacy/domain/*"],
      "@financial/infrastructure/repositories/*": ["build/ontologies/financial/legacy/infrastructure/repositories/*"],
      "@procurement/domain/*": ["build/ontologies/procurement/legacy/domain/*"],
      "@procurement/infrastructure/repositories/*": ["build/ontologies/procurement/legacy/infrastructure/repositories/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}