{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "../",
    "paths": {
      "@src/*": ["src/*"],
      "@platform/*": ["src/platform/*"],
      "@crm/*": ["ontologies/crm/*"],
      "@financial/*": ["ontologies/financial/*"],
      "@procurement/*": ["ontologies/procurement/*"],
      "@shared/*": ["src/shared/*"],
      "@mcp/*": ["src/mcp/*"],
      "@generated/*": ["codegen/generated/*"],
      "@codegen/generated/*": ["codegen/generated/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}