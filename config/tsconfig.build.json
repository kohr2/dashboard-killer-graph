{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../"
  },
  "include": [
    "../src/**/*.ts",
    "../build/ontologies/**/*.ts",
    "../ontologies/**/*.json",
    "../build/**/*.ts",
    "../config/ontology/**/*.ts",
    "../config/ontology/**/*.json",
    "../src/register-ontologies.ts"
  ],
  "exclude": [
    "../**/__tests__/**",
    "../**/test/**",
    "../test/**",
    "../scripts/**",
    "../docs/**",
    "../node_modules",
    "../dist"
  ]
} 