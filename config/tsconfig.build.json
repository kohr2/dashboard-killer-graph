{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../"
  },
  "include": [
    "../src/**/*.ts",
    "../ontologies/**/*.plugin.ts",
    "../ontologies/**/index.ts",
    "../ontologies/**/application/**/*.ts",
    "../ontologies/**/domain/**/*.ts",
    "../ontologies/**/infrastructure/**/*.ts",
    "../ontologies/**/interface/**/*.ts",
    "../ontologies/**/repositories/**/*.ts",
    "../ontologies/**/services/**/*.ts",
    "../ontologies/**/*.json",
    "../build/**/*.ts",
    "../src/register-ontologies.ts"
  ],
  "exclude": [
    "../**/__tests__/**",
    "../test/**",
    "../scripts/**",
    "../docs/**",
    "../node_modules",
    "../dist"
  ]
} 