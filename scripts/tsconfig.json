{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "../dist/scripts",
    "baseUrl": "..",
    "paths": {
      "@src/*": ["src/*"],
      "@platform/*": ["src/platform/*"],
      "@crm/*": ["ontologies/crm/*"],
      "@financial/*": ["ontologies/financial/*"],
      "@shared/*": ["src/shared/*"]
    },
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "../src/**/*.ts", "../ontologies/**/*.ts"],
  "exclude": ["../node_modules", "../dist"]
} 