{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@crm/*": ["src/extensions/crm/*"],
      "@financial/*": ["src/extensions/financial/*"],
      "@platform/*": ["src/platform/*"],
      "@shared/*": ["src/shared/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "test/**/*.ts",
    "src/**/*.ts"
  ]
} 