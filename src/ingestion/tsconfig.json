{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/ingestion",
    "rootDir": "../",
    "rootDirs": [".", "../shared", "../platform", "../common"],
    "baseUrl": "../..",
    "paths": {
      "@ingestion/*": ["src/ingestion/*"],
      "@shared/*": ["src/shared/*"],
      "@platform/*": ["src/platform/*"],
      "@shared/*": ["src/shared/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "../shared/**/*.ts", "../common/**/*.ts", "../platform/**/*.ts"],
  "exclude": ["**/*.test.ts"]
} 