{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/platform",
    "rootDir": ".",
    "rootDirs": [".", "../ontologies", "../ingestion"],
    "baseUrl": "../..",
    "paths": {
      "@src/*": ["src/*"],
      "@crm/*": ["src/ontologies/crm/*"],
      "@financial/*": ["src/ontologies/financial/*"],
      "@platform/*": ["src/platform/*"],
      "@shared/*": ["src/shared/*"],
      "@ingestion/*": ["src/ingestion/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["**/*.ts"],
  "references": [
    { "path": "../ingestion" }
  ],
  "exclude": ["**/*.test.ts"]
} 