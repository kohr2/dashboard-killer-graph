{
  "extends": "../../../config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../../dist/extensions/financial",
    "rootDir": ".",
    "baseUrl": "../../..",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "@crm/*": ["src/ontologies/crm/*"],
      "@financial/*": ["src/ontologies/financial/*"],
      "@platform/*": ["src/platform/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["**/*.ts", "**/*.json"],
  "exclude": ["**/*.test.ts"],
  "references": [
    { "path": "../../platform" }
  ]
} 