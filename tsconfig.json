{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "@platform/*": ["src/platform/*"],
      "@crm/*": ["ontologies/crm/*"],
      "@financial/*": ["ontologies/financial/*"],
      "@procurement/*": ["ontologies/procurement/*"],
      "@shared/*": ["src/shared/*"],
      "@src/*": ["src/*"],
      "@generated/*": ["codegen/generated/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.json", "ontologies/**/*.ts", "config/**/*.ts", "test/**/*.ts", "codegen/**/*.ts"],
  "exclude": ["node_modules", "dist", "scripts"]
}
