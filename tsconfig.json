{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@platform/*": ["src/platform/*"],
      "@crm/*": ["src/ontologies/crm/*"],
      "@financial/*": ["src/ontologies/financial/*"],
      "@shared/*": ["src/shared/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "files": [],
  "references": [
    { "path": "src/ontologies/crm" },
    { "path": "src/ontologies/financial" },
    { "path": "src/platform" },
    { "path": "test" }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "src/ontologies", "scripts"]
}