{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@crm-core/*": ["src/crm-core/*"],
      "@financial/*": ["src/extensions/financial/*"],
      "@platform/*": ["src/platform/*"],
      "@shared/*": ["src/shared/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}