# Knowledge Graph Platform Environment Configuration

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# OpenAI Configuration (Optional but recommended)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# NLP Service Configuration (Optional)
NLP_SERVICE_URL=http://localhost:8000
ANALYSIS_SERVICE_URL=http://localhost:8001

# Debug Configuration (Optional)
ENABLE_PROMPT_DEBUG=0
PROMPT_DEBUG_DIR=/tmp/llm-prompts

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# MCP Server Configuration (Optional)
MCP_SERVER_PORT=3002
MCP_SERVER_HOST=localhost

# Email Processing Configuration (Optional)
EMAIL_PROCESSING_ENABLED=true
MAX_EMAIL_SIZE=10MB

# Vector Search Configuration (Optional)
VECTOR_SEARCH_ENABLED=true
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Performance Configuration (Optional)
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10

# Monitoring Configuration (Optional)
METRICS_ENABLED=false
HEALTH_CHECK_INTERVAL=30000